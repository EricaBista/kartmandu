<div class="shoppingCart">
  <div class="container">
  <h2>Shopping Cart</h2>
  
  <form>
  
            <div class="table-responsive">
            <table class="table table-bordered">
          
   
                    <thead>
                      <tr>
                        <th>Product Images</th>
                        <th>Product Name</th>
                        <th>Model</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                        
                      </tr>
                    </thead>
                    <tbody> 

                    <% @cart.each do |id, quantity| %>
                    <% item = Item.find_by_id(id) %>
        
                      <tr>
                      <td><%= image_tag(item.image_url(:thumb),  :class =>"img-responsive") %></td>
                        
                        <td><%= item.name %> </td>
                        <td><%= item.model_number %> </td>
                         <td><%= quantity %></td>
                        <td><%= number_to_currency(item.price, :unit => '$')%></td>
                        <td><%=number_to_currency(quantity*item.price) %> <a href=""><i class="fa fa-times"></i></a></td>
                      </tr>
                       <% end -%>
                      </tbody>
                      
                     
                        </table>
                         </div> 
                        
                        
                        
                        
                   <div class="row">
                     <div class="col-sm-9"></div>   
            
                    
                    <div class="col-sm-3">
            <div class="totalPrice">
                    <table class="table table-bordered">
              <tbody>
                      
                      
                      <tr>
                        <td>Total:</td>
                        <td>$ 199</td>
                      </tr>
                      </tbody>
                
                      </table>
  
            </div>
                    </div>
                    
              </div>
                    <%= link_to "Continue Shopping", root_path, :class => "btn btn-default" %>
                  <% if signed_in? %>
                    <%= link_to "Checkout", buy_path, :class => "btn btn-info" %>
                   <!--  <button type="submit" class="btn btn-info">Checkout</button>  -->
                    <% else %>
                    <%= link_to "Checkout",new_user_session_path, :class => "btn btn-info" %>
                    <% end %>
                    <%= link_to 'Cancel Shopping', cart_clear_path, :class => "btn btn-primary" %>

       
  
 </form> 
  
 
  </div>
  </div>    
    


